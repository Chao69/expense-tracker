<form action="/expense" method="POST">
  <div class="contain mx-auto" style="width: 900px;margin-top: 150px;">
    <div class="row mb-3">
      <div class="col">
        <div class="d-flex justify-content-end align-items-center">
          <p style="width: 100px; font-size: 15px;">*必填欄位</p>
        </div>
      </div>
      <div class="col">
        <h5>請輸入你的支出</h5>
      </div>
    </div>
    <div class="row mb-3">
      <div class="col d-flex justify-content-end align-items-center">
        <div class="d-flex justify-content-end">
          <p style="width: 100px; margin-bottom: 0;">名稱*：</p>
        </div>
      </div>
      <div class="col">
        <input type="text" class="form-control" aria-label="Sizing example input"
          aria-describedby="inputGroup-sizing-default" placeholder="name ..." name="name">
      </div>
    </div>
    <div class="row mb-3">
      <div class="col d-flex justify-content-end align-items-center">
        <div class="d-flex justify-content-end">
          <p style="width: 100px; margin-bottom: 0;">日期*：</p>
        </div>
      </div>
      <div class="col">
        <div class="col">
          <input type="date" class="form-control" aria-label="Sizing example input"
            aria-describedby="inputGroup-sizing-default" name="date">
        </div>
      </div>
    </div>
    <div class="row mb-3">
      <div class="col d-flex justify-content-end align-items-center">
        <div class="d-flex justify-content-end">
          <p style="width: 100px; margin-bottom: 0;">類別*：</p>
        </div>
      </div>
      <div class="col">
        <div class="input-group">
          <input type="text" class="form-control" aria-label="Text input with dropdown button"
            placeholder="category ..." name="category">
          <button class="btn btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown"
            aria-expanded="false">Dropdown</button>
          <ul class="dropdown-menu dropdown-menu-end">
            <li><a class="dropdown-item" href="#">Action</a></li>
            <li><a class="dropdown-item" href="#">Another action</a></li>
            <li><a class="dropdown-item" href="#">Something else here</a></li>
            <li>
              <hr class="dropdown-divider">
            </li>
            <li><a class="dropdown-item" href="#">Separated link</a></li>
          </ul>
        </div>
      </div>
    </div>
    <div class="row mb-3">
      <div class="col d-flex justify-content-end align-items-center">
        <div class="d-flex justify-content-end">
          <p style="width: 100px; margin-bottom: 0;">金額*：</p>
        </div>
      </div>
      <div class="col">
        <div class="col">
          <input type="text" class="form-control" aria-label="Sizing example input"
            aria-describedby="inputGroup-sizing-default" placeholder="amount ..." name="amount">
        </div>
      </div>
    </div>
  </div>
  <div class="d-flex justify-content-center">
    <a class="btn btn-success px-5" href="/">新增支出</a>
  </div>
</form>