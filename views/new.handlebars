<form action="/new" method="POST">
  <div class="contain mx-auto" style="width: 900px;margin-top: 150px;">
    <div class="row mb-3">
      <div class="col">
        <div class="d-flex justify-content-end align-items-center">
          <p style="width: 100px; font-size: 15px;">*必填欄位</p>
        </div>
      </div>
      <div class="col">
        <h5>請輸入你的支出</h5>
      </div>
    </div>
    <div class="row mb-3">
      <div class="col d-flex justify-content-end align-items-center">
        <div class="d-flex justify-content-end">
          <p style="width: 100px; margin-bottom: 0;">名稱*：</p>
        </div>
      </div>
      <div class="col">
        <input type="text" class="form-control" aria-label="Sizing example input"
          aria-describedby="inputGroup-sizing-default" placeholder="name ..." name="name" required>
      </div>
    </div>
    <div class="row mb-3">
      <div class="col d-flex justify-content-end align-items-center">
        <div class="d-flex justify-content-end">
          <p style="width: 100px; margin-bottom: 0;">日期*：</p>
        </div>
      </div>
      <div class="col">
        <div class="col">
          <input type="date" class="form-control" aria-label="Sizing example input"
            aria-describedby="inputGroup-sizing-default" name="date" required>
        </div>
      </div>
    </div>
    <div class="row mb-3">
      <div class="col d-flex justify-content-end align-items-center">
        <div class="d-flex justify-content-end">
          <p style="width: 100px; margin-bottom: 0;">類別*：</p>
        </div>
      </div>
      <div class="col">
        <div class="input-group">
          <select class="form-control ml-2" id="record-category" name="category" required>
            {{#each categoryList }}
            <option value="{{ this.name }}">{{ this.name }}</option>
            {{/each}}
          </select>
        </div>
      </div>
    </div>
    <div class="row mb-3">
      <div class="col d-flex justify-content-end align-items-center">
        <div class="d-flex justify-content-end">
          <p style="width: 100px; margin-bottom: 0;">金額*：</p>
        </div>
      </div>
      <div class="col">
        <div class="col">
          <input type="text" class="form-control" aria-label="Sizing example input"
            aria-describedby="inputGroup-sizing-default" placeholder="amount ..." name="amount" required>
        </div>
      </div>
    </div>
  </div>
  <div class="d-flex justify-content-center">
    <button class="btn btn-success active mx-2 px-4" type="submit" aria-pressed="true">新增支出</button>
    <a href="/" class="btn btn-secondary  active mx-2 px-4" role="button" aria-pressed="true">回到首頁</a>
  </div>
</form>