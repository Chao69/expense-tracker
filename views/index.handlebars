{{!-- dropdown --}}
<div class="d-flex flex-column" style="margin-top: 100px;">
  <form action="/filter" method="GET" class="row">
    <div class="col">
      <div class="input-group filter-month mb-3 container-fluid" style="width: 300px;">
        <select class="form-control ml-2" name="category" onchange="submit()">
          <option value="">所有種類</option>
          <option value="家居物業" {{#is categorySelect '家居物業' }} selected {{/is}}>家居物業</option>
          <option value="交通出行" {{#is categorySelect '交通出行' }} selected {{/is}}>交通出行</option>
          <option value="休閒娛樂" {{#is categorySelect '休閒娛樂' }} selected {{/is}}>休閒娛樂</option>
          <option value="餐飲食品" {{#is categorySelect '餐飲食品' }} selected {{/is}}>餐飲食品</option>
          <option value="其他" {{#is categorySelect '其他' }} selected {{/is}}>其他</option>
        </select>
      </div>
    </div>
    <div class="col">
      <div class="input-group filter-month mb-3 container-fluid" style="width: 300px;">
        <select class="form-control ml-2" name="month" onchange="submit()">
          <option value="">所有月份</option>
          <option value="1" {{#is monthSelect '1' }} selected {{/is}}>一月</option>
          <option value="2" {{#is monthSelect '2' }} selected {{/is}}>二月</option>
          <option value="3" {{#is monthSelect '3' }} selected {{/is}}>三月</option>
          <option value="4" {{#is monthSelect '4' }} selected {{/is}}>四月</option>
          <option value="5" {{#is monthSelect '5' }} selected {{/is}}>五月</option>
          <option value="6" {{#is monthSelect '6' }} selected {{/is}}>六月</option>
          <option value="7" {{#is monthSelect '7' }} selected {{/is}}>七月</option>
          <option value="8" {{#is monthSelect '8' }} selected {{/is}}>八月</option>
          <option value="9" {{#is monthSelect '9' }} selected {{/is}}>九月</option>
          <option value="10" {{#is monthSelect '10' }} selected {{/is}}>十月</option>
          <option value="11" {{#is monthSelect '11' }} selected {{/is}}>十一月</option>
          <option value="12" {{#is monthSelect '12' }} selected {{/is}}>十二月</option>
        </select>
      </div>
    </div>
  </form>
</div>

{{!-- total amount --}}
<div class="d-flex justify-content-center" style="margin: 30px 0 15px 0">
  <div class="d-flex justify-content-center rounded" style="background-color: #C4E1FF;max-width: 100%;">
    <h4 style="margin: 20px 10px;">Total:</h4>
    <h1 style="margin: 20px">{{ totalAmount }}</h1>
  </div>
</div>

{{!-- expense list --}}
<ul class="list-group" style="margin-top: 75px;max-width: 30%; margin: auto;">
  {{#each records}}
  <li class="list-group-item m-1 rounded" style="background-color: cadetblue;">
    <div class="col d-flex justify-content-evenly align-items-center">
      <i class="{{ this.icon }} fa-2x p-2" style="color: 	#AD5A5A;"></i>
      <div class="col">
        <h4 style="display: inline;">{{ this.name }}</h4>
        <p style="margin-bottom: 0">{{ this.date }}</p>
      </div>
      <div class="col">
        <h6 style="margin-bottom: 0;">{{ this.merchant }}</h6>
      </div>
      <div class="col d-flex justify-content-center">
        <h5 style="margin-bottom: 0;">{{ this.amount }}</h5>
      </div>
      <div class="col d-flex justify-content-end">
        <a href="./records/{{ this._id }}" class="btn btn-success">Detail</a>
        <a href="./records/{{ this._id }}/edit" class="btn btn-secondary">Edit</a>
        <form action="./records/{{ this._id }}?_method=DELETE" method="POST" style="display: inline;">
          <button class="btn btn-danger" type="submit">Delete</button>
        </form>
      </div>
    </div>
  </li>
  {{/each}}
</ul>

{{!-- add new expense button --}}
<div class="col d-flex justify-content-center mt-3">
  <a class="btn btn-success px-5" href="/records/new">新增支出</a>
</div>